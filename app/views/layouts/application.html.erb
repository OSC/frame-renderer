<!DOCTYPE html>
<html>
<head>
  <title>Video Processing</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>

    <nav>
      <div class="navbar">
        <ul class="breadcrumb">
          <li><%= link_to "Projects", projects_path %></li>
        </ul>
      </div>
    </nav>

  </header>

  <div class="container" role="main" style="width:1500px;" >

    <script type="text/javascript">var selected_id = <%= @selected_id || 0 %>;</script>

    <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <%= alert %>
      <%= content_tag :pre, flash[:alert_error] if flash[:alert_error] %>
    </div>
    <% end %>

    <% if notice %>
    <div class="alert alert-success" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <%= notice %>
    </div>
    <% end %>

    <%= yield %>

    <footer>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <p id="app_version" class="pull-right"><%= ENV['APP_VERSION'] %></p>
          </div>
        </div>
    </footer>

  </div><!-- /.container -->

</body>
</html>
