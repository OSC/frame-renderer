<!DOCTYPE html>
<html>
<head>
  <title>Frame Renderer</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>

    <nav class="navbar navbar-blue navbar-static-top" id="main-nav">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to OodAppkit.dashboard.title, OodAppkit.dashboard.url.to_s, class: "navbar-brand" %>  
        </div>     

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav mr-auto">
            <li class="nav-item"><%= link_to "Projects", projects_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><a href="https://github.com/OSC/frame-renderer/blob/master/README.md">Help</a><li>
          </ul>
        </div>
      </div>
    </nav>

  </header>

  <div class="container" role="main">

    <script type="text/javascript">var selected_id = <%= @selected_id || 0 %>;</script>

    <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <pre>
        <%= alert %>
        <%= content_tag :pre, flash[:alert_error] if flash[:alert_error] %>
      </pre>
    </div>
    <% end %>

    <% if notice %>
    <div class="alert alert-success" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <pre>
        <%= notice %>
      </pre>
    </div>
    <% end %>

    <%= yield %>

    <footer>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <p id="app_version" class="pull-right"><%= ENV['APP_VERSION'] %></p>
          </div>
        </div>
    </footer>

  </div><!-- /.container -->

</body>
</html>
