
<%= bootstrap_form_for [@project, @script], :html => { :onsubmit => "return validateScript()" }  do |form| %>

    <div class="panel panel-default">
      <div class="panel-heading">
        Edit Job Setting
      </div>

      <div class="panel-body", role="main">
        <%= form.text_field :name, required: true %> 
        <%= form.text_field :frames, required: true, help: 'example: 1-10' %>
        <%= form.text_field :camera, required: true %> 
        <%= form.select :file, list_scenes(@project.directory), required: true %>
        
        <%= form.text_field :accounting_id, required: false, label: 'Chargeback project',
          help: 'only specify if you\'re in multiple chargeback projects',
          placeholder: "PZS0714" %>

        <%= form.number_field :nodes, required: true %> 
        <%= form.select :renderer, 
          ['arnold','default','file','hw2','hw','interBatch','sw','turtle','turtlebake','vr'], required: true %>
        <%= form.text_field :extra, required: false %>
        <%= form.number_field :walltime, required: true, help: 'hours this job will be scheduled for' %>
        <%= form.check_box :email %>
        <%= form.check_box :skip_existing %>
        
      </div>

    </div>


  <p>
    <%= form.submit 'Save', class: 'btn btn-primary' %>
    <%= form.button 'Reset', type: :reset, class: 'btn btn-default' %>
    <%= link_to 'Back', project_path(@project), class: 'btn btn-default' %>
  <p>

<% end %>

