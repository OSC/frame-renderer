<div class="page-header" >
  <h2>Video Processing Projects</h2>
</div>

<div>
  <div class="btn-group open">
    <a  data-method="get" 
        data-toggle="tooltip" 
        title="Create a new Project" 
        href="<%= new_project_path %>"
    >
      
    <button type="button" id="new_job_button" class="btn btn-primary" > New Project </button></a>
  </div>
</div>

<br>
<br>

<h3>Projects</h3>

<div id="submission-list-view" class="panel panel-default">
  <div class="panel-body" >
    <table id="submission-list-table" class="table data-table" >

    <thead>
      <tr>
        <th>Project Name</th>
        <th>Actions</th>
      <tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project_path(project)  %></td>
          <td><%= link_to 'Work in', project_path(project), class: 'btn btn-success btn-sm' %>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-info btn-sm' %>
          <td><%= link_to 'Delete', project_path(project), :method => :delete,
            data: {confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
        <tr>
      <% end %>
    </tbody>

  </div>
</div>
