<%= form_for @project do |form| %>

<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :description %><br>
  <%= form.text_field :description %>
</p>

<p>
  <%= form.label :directory %><br>
  <%= form.text_field :directory, 'data-filepicker': 'true' %>
</p>

<p>
  <%= form.submit %>
<p>

<% end %>